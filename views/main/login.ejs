<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>
    <div class="container">
        <h1>Login page</h1>
        <form class="contact-form" action="/login" method="post">
            <div>
                <select name="select_usermode" required="required">
                    <option value="">Select usermode</option>
                    <option value="customer">Customer</option>
                    <option value="seller">Seller</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <div>
                <label for="username">username</label>
                <input type="text" id="username" name="username" value="" required="required">
            </div>
                <label for="pw">pw</label>
                <input type="password" id="pw" name="pw" value="" required="required">
            </div>
            <div>
                <button type="submit">Submit</button>
                <br>
                <% if(err_flag) { %>
                    <span style="color:red;"><%= error %></span>
                <% }%>
            </div>
            <br>
            <div>
                <a href="/">back</a>
            </div>
        </form>
        <br>
        <a href="/signup_admin">admin signup</a> <br>
        <a href="/signup_seller">seller signup</a> <br>
        <a href="/signup_customer">customer signup</a> <br>
        <!-- <a href="/register">register</a> -->
    </div>
</body>
</html>
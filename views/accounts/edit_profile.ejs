<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <div class="contact contact-new">
      <div class="contact-menu">
        <a href="/mypage/<%= user_info.username %>">Back</a>
      </div>
      <h2>Edit Profile</h2>
      <% if(usermode == 'seller') { %>
        <form class="contact-form" action="/mypage/edit/<%= user_info.username %>" method="post">
          <div>
            <label for="username">username</label> :
            <span id="username" name="username"><%=user_info.username%></span>
          </div>
          <div>
            <label for="pw">pw</label>
            <input type="password" id="pw" name="pw" value="<%=user_info.password%>" required="required">
          </div>
          <div>
            <label for="phone_num">phone_num</label>
            <input type="text" id="phone_num" name="phone_num" value="<%=user_info.phone_num%>" required="required">
          </div>
          <div>
            <button type="submit">Submit</button>
          </div>
        </form>
      <% } else { %>
        <form class="contact-form" action="/mypage/edit/<%= user_info.username %>" method="post">
          <div>
              <label for="username">username</label> :
              <span id="username" name="username"><%=user_info.username%></span>
          </div>
          <div>
            <label for="pw">pw</label>
            <input type="password" id="pw" name="pw" value="<%=user_info.password%>" required="required">
          </div>
          <div>
              <label for="phone_num">phone_num</label>
              <input type="text" id="phone_num" name="phone_num" value="<%=user_info.phone_num%>" required="required">
            </div>
          <div>
            <label for="address">address</label>
            <input type="text" id="address" name="address" value="<%= user_info.address %>" required="required">
          </div>
          <div>
            <button type="submit">Submit</button>
          </div>
        </form>
      <% } %>
    </div>
  </body>
</html>